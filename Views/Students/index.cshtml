@model List<WebApplication1Dotnet.Models.Student>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Students" class="btn btn-success">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Student name</td>
                    <td>Student id</td>
                    <td>Email</td>
                    <td>Manage</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Id</td>
                        <td>@item.Email</td>
                        <td>
                            <a  asp-action="Edit" asp-controller="Students" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                            <a  asp-action="Delete" asp-controller="Students" asp-route-id="@item.Id" class="btn text-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>