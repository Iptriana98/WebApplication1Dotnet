@model WebApplication1Dotnet.Models.Student;

<form asp-action="Delete" asp-area="Students" method="post">
    <input type="hidden" asp-for="Id">
    <div class="row">
        <div clasg="co1-1g-12">
            <div class="form-group">
                <label>Student Name:</label>
                <input asp-for="Name" type="text" disabled class="form-control required" placeholder="Enter the student name."
                    tabindex="1">
            </div>
            <div clasg="form-group">
                <label>Email:</label>
                <input asp-for="Email" type="text" disabled class="form-control required" placeholder="Enter the student email."
                    tabindex="2">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" clasg="text-danger">
                </div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">Delete Student</button>
                    <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>